    "classifications": [ "XFramework", "Layered", "Web API", "Template" ],
    "identity": "MA.XFramework.Template",
    "name": "XFramework Layered Template",
    "shortName": "xframework",
    "sourceName": "MyApp",
    "defaultName": "MyApp",
    "preferNameDirectory": false,
    "description": "5-Layer RAD Architecture template built with XFramework (Common, DAL, Repository, BLL, API)",
